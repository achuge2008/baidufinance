<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <TextView
        android:id="@+id/txt_sh_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/view_div"
        android:gravity="center"
        android:text="沪股通当日剩余额度"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txt_sh_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_sh_name"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/view_div"
        android:gravity="center"
        android:text="123.68亿"
        android:textSize="12dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view_div"
        android:layout_width="1px"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_sh_money"
        android:layout_alignTop="@+id/txt_sh_name"
        android:layout_centerHorizontal="true"
        android:background="@color/div_color" />

    <TextView
        android:id="@+id/txt_hk_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/view_div"
        android:gravity="center"
        android:text="港股通当日剩余额度"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txt_hk_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_hk_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/view_div"
        android:gravity="center"
        android:text="90.68亿"
        android:textSize="12dp"
        android:textStyle="bold" />

</RelativeLayout>