<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/round_solid_color"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txt_dwjz"
        android:layout_width="@dimen/fund_width"
        android:layout_height="@dimen/fund_height"
        android:gravity="center|left"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="最新公布净值"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/txt_ljdwjz"
        android:layout_width="@dimen/fund_width"
        android:layout_height="@dimen/fund_height"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="累计净值"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/txt_zrjz"
        android:layout_width="@dimen/fund_width"
        android:layout_height="@dimen/fund_height"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="前单位净值"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/txt_jzzz"
        android:layout_width="@dimen/fund_width"
        android:layout_height="@dimen/fund_height"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="净值增长率 "
        android:textSize="14dp" 
        android:drawableRight="@drawable/portfolio_market"
        android:textColor="@color/blue_color"
        />

    <TextView
        android:id="@+id/txt_jjgm"
        android:layout_width="@dimen/fund_width"
        android:layout_height="@dimen/fund_height"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="基金规模"
        android:textSize="14dp" />

</LinearLayout>