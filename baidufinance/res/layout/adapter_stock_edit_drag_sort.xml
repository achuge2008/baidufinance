<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/item_height" >

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_height"
        android:layout_marginRight="5dp"
        android:button="@drawable/edit_checkbox_normal"
        android:gravity="center_vertical"
        android:focusable="true"
        android:layout_marginLeft="15dp"
        />
<TextView
        android:id="@+id/txt_exchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f69"
        android:layout_marginTop="10dp"
        android:padding="1dp"
        android:layout_toRightOf="@+id/checkbox"
        android:text="HK"
        android:layout_marginRight="2dp"
        android:textColor="#ffffff"
        android:textSize="9dp" />
    <RelativeLayout
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/txt_exchange"
         >
    <TextView
        android:id="@+id/txt_stockname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创业板指"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/txt_stockcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_stockname"
        android:layout_marginTop="3dp"
        android:text="399006"
        android:textSize="10dp" />
</RelativeLayout>
    <ImageView
        android:id="@+id/drag_alarm"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/remind_message_center_light" />

    <ImageView
        android:id="@+id/group_top"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@+id/drag_handle"
        android:background="@drawable/group_top" />

    <ImageView
        android:id="@+id/drag_handle"
        android:layout_width="25dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/edit_drag" />

</RelativeLayout>