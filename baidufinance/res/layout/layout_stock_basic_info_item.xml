<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <View
        android:id="@+id/div_view"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/txt_datetime"
        android:layout_alignBottom="@+id/txt_message"
        android:layout_marginRight="10dp"
        android:background="@color/div_color" 
        android:layout_marginLeft="5dp"
        />

    <View
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/emoji_dot" 
        android:layout_marginLeft="2dp"
        />

    <TextView
        android:id="@+id/txt_datetime"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/div_view"
        android:background="@drawable/gray_solid_shape"
        android:padding="3dp"
        android:text="2017-07-14"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txt_eventType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/txt_datetime"
        android:text="业绩披露"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_datetime"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/div_view"
        android:text="预计2017年半年度归属于上市公司股东的净利润盈利：420,000万元–450,000万元，同比实现扭亏为盈"
        android:textColor="@color/gray_53_color"
        android:paddingBottom="5dp"
        android:textSize="14dp" />

</RelativeLayout>