<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!--
         <com.open.baidu.finance.widget.PullToRefreshScrollableLayout
        android:id="@+id/pulltorefreshscrollablelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical" >
        -->

        <LinearLayout
            android:id="@+id/layout_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="公司简介"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/div_view"
            android:layout_width="5dp"
            android:layout_height="20dp"
            android:layout_below="@+id/layout_all"
            android:background="@color/blue_color" />

        <TextView
            android:id="@+id/txt_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/div_view"
            android:layout_below="@+id/layout_all"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/div_view"
            android:text="重大事件"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_event"
            android:orientation="vertical"
            android:padding="10dp" />

        <TextView
            android:id="@+id/div_view2"
            android:layout_width="5dp"
            android:layout_height="20dp"
            android:layout_below="@+id/layout_event"
            android:background="@color/blue_color" />

        <TextView
            android:id="@+id/txt_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/div_view2"
            android:layout_below="@+id/layout_event"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/div_view2"
            android:text="业绩同比增长率"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_chart"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_profit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_bounds_shape"
                android:gravity="center"
                android:padding="5dp"
                android:text="净利润"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_income"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_bounds_shape"
                android:gravity="center"
                android:padding="5dp"
                android:text="营业收入"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_pershare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_bounds_shape"
                android:gravity="center"
                android:padding="5dp"
                android:text="每股收益"
                android:textSize="14dp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/layout_combined_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/layout_chart" />
        
         <TextView
            android:id="@+id/div_view3"
            android:layout_width="5dp"
            android:layout_height="20dp"
            android:layout_below="@+id/layout_combined_chart"
            android:background="@color/blue_color" />

        <TextView
            android:id="@+id/txt_concept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/div_view3"
            android:layout_below="@+id/layout_combined_chart"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/div_view3"
            android:text="相关概念"
            android:textSize="18dp"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/layout_concept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_concept"
            android:orientation="horizontal"
            android:padding="10dp" />
        
        
        <TextView
            android:id="@+id/div_view4"
            android:layout_width="5dp"
            android:layout_height="20dp"
            android:layout_below="@+id/layout_concept"
            android:background="@color/blue_color" />

        <TextView
            android:id="@+id/txt_income2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/div_view4"
            android:layout_below="@+id/layout_concept"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/div_view4"
            android:text="主营收入"
            android:textSize="18dp"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/layout_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_income2"
            android:orientation="vertical"
            android:padding="10dp" />
        <!-- </com.open.baidu.finance.widget.PullToRefreshScrollableLayout> -->

    </RelativeLayout>

</ScrollView>