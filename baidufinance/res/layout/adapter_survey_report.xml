<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <RelativeLayout
        android:id="@+id/layout_survey"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginRight="10dp"
        android:background="#EBF1F6"
        >

        <TextView
            android:id="@+id/txt_surveycount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="机构数量"
            android:layout_marginTop="8dp"
            android:textColor="@color/gray_75_color"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_surveycount"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="64"
            android:textColor="@color/blue_color"
            android:textSize="25dp" />
 
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="查看纪要"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/blue_bounds_shape"
        android:textColor="@color/blue_color"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/txt_stockname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/layout_survey"
        android:text="汇川技术"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txt_stockcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_stockname"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/layout_survey"
        android:text="300124"
        android:textColor="@color/gray_75_color"
        android:textSize="14dp" />


    <TextView
        android:id="@+id/txt_survey_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_stockcode"
        android:layout_marginTop="5dp"
        android:textColor="@color/gray_75_color"
        android:layout_toRightOf="@+id/layout_survey"
        android:text="调研机构：易方达基金 鹏华基金"
        android:textSize="13dp" />

</RelativeLayout>