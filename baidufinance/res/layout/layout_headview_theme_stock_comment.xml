<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/bottom_color"
     >

    <TextView
        android:id="@+id/txt_up"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/red_bounds_shape"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="看好"
        android:textColor="@color/red_color"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txt_up_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_up"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/txt_up"
        android:text="649"
        android:textColor="@color/red_color"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txt_down_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_down"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/txt_down"
        android:text="735"
        android:textColor="@color/green_color"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txt_down"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/green_bounds_shape"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="看空"
        android:textColor="@color/green_color"
        android:textSize="16dp" />

    <View
        android:id="@+id/view_up"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignTop="@+id/view_center"
        android:layout_toLeftOf="@+id/view_center"
        android:background="@color/red_color" />

    <View
        android:id="@+id/view_center"
        android:layout_width="1dp"
        android:layout_height="5dp"
        android:layout_below="@+id/txt_up"
        android:layout_marginTop="15dp"
        android:background="@color/green_color"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/view_down"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignTop="@+id/view_center"
        android:layout_toRightOf="@+id/view_center"
        android:background="@color/green_color" />

</RelativeLayout>